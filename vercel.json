{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --no-input --clear",
  "builds": [
    {
      "src": "littlelemon/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/staticfiles/$1" },
    { "src": "/(.*)", "dest": "littlelemon/wsgi.py" }
  ]
}
